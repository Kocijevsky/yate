match / {
    tree = {
        "title": "Hello, World"
        "item": [
            for .item {
                if .text != "Second" {
                    .text
                }
            }
        ]
    }

    apply tree content
}

match / content {
    <h1>{ .title }</h1>
    <ul>
        for .item {
            <li>{ . }</li>
        }
    </ul>
}

